#include <iostream>
using namespace std;
#define cap 5
class Stack {
	int arr[cap];
	int size = 0;
public:
	Stack(){
		size = 0;
	}
	void push_back(int val);
	void pop();
	void findMin();
};
void Stack::push_back(int val) {
	if(size == cap) {
		cout << "Stack is full" << endl;
		return;
	}
	arr[size++] = val;
	cout << val << " is pushed into the stack" << endl;
}
void Stack::pop() {
	if (size == 0) {
		cout << "no elements are inserted yet" << endl;
		return;
	}
	cout << arr[--size] << " is removed from the stack" << endl;
}
void Stack::findMin() {
	if (size == 0) {
		cout << "no elements are found" << endl;
		return;
	}
	int mn = arr[0];
	for (int i = 1; i < size; i++) {
		   if (arr[i] < mn) mn = arr[i];
		}
    cout << "the smallest element in the stack is " <<  mn << endl;
}
int main() {
	Stack s;
	s.findMin();
	s.push_back(75);
	s.push_back(33);
	s.push_back(22);
	s.push_back(415);
	s.push_back(500);
	s.findMin();
	s.pop();
	s.push_back(10);
	s.findMin();
}
